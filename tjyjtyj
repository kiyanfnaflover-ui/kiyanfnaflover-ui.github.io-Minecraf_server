    <script>
        // ==================== تنظیمات ====================
        const CONFIG = {
            SERVER_ADDRESS: 'cosjolserver.aternos.me:11940',
            SESSION_TIMEOUT: 24 * 60 * 60 * 1000,
            ADMIN_USERNAME: 'kiyanfnaf1388',
            ADMIN_PASSWORD: 'kiyanfnaf13882014',
            ATERNOS_PANEL_URL: 'https://aternos.org/server/',
            API_URL: 'https://api.mcsrvstat.us/3/'
        };

        // ==================== مدیریت Aternos API ====================
        class AternosAPIManager {
            constructor() {
                this.isAuthenticated = false;
                this.serverStatus = 'offline';
                this.serverStats = {
                    players: 0,
                    ram: 0,
                    uptime: 0,
                    tps: 20
                };
                this.retryCount = 0;
                this.maxRetries = 3;
            }

            async authenticate(username, password) {
                try {
                    await new Promise(resolve => setTimeout(resolve, 1500));
                    // شبیه‌سازی احراز هویت (بدون تغییر)
                    this.isAuthenticated = true;
                    await this.updateServerStatus();
                    return true;
                } catch (error) {
                    console.error('Authentication error:', error);
                    this.isAuthenticated = false;
                    return false;
                }
            }

            async controlServer(action) {
                if (!this.isAuthenticated) {
                    throw new Error('Not authenticated');
                }

                try {
                    let result = false;
                    
                    switch(action) {
                        case 'start':
                            console.log('Starting server...');
                            this.serverStatus = 'starting';
                            setTimeout(() => {
                                this.updateServerStatus(); // بررسی وضعیت واقعی پس از 10 ثانیه
                            }, 10000);
                            result = true;
                            break;
                        case 'stop':
                            console.log('Stopping server...');
                            this.serverStatus = 'offline';
                            result = true;
                            break;
                        case 'restart':
                            console.log('Restarting server...');
                            this.serverStatus = 'starting';
                            setTimeout(() => {
                                this.updateServerStatus();
                            }, 15000);
                            result = true;
                            break;
                        case 'cancel':
                            console.log('Cancelling operation...');
                            this.serverStatus = 'offline';
                            result = true;
                            break;
                        case 'confirm':
                            console.log('Confirming operation...');
                            this.serverStatus = 'online';
                            result = true;
                            break;
                        default:
                            throw new Error('Invalid action: ' + action);
                    }
                    
                    this.updateUI();
                    return result;
                } catch (error) {
                    console.error('Control error:', error);
                    throw error;
                }
            }

            async updateServerStatus() {
                try {
                    const response = await fetch(`${CONFIG.API_URL}${encodeURIComponent(CONFIG.SERVER_ADDRESS)}`);
                    if (!response.ok) throw new Error('سرور پیدا نشد یا آفلاین است');
                    const data = await response.json();
                    
                    this.serverStatus = data.online ? 'online' : 'offline';
                    this.serverStats = {
                        players: data.players?.online || 0,
                        ram: data.debug?.memory?.usedMB || 0,
                        uptime: data.debug?.uptime || 0,
                        tps: data.debug?.tps || 0
                    };
                    
                    return this.serverStatus;
                } catch (error) {
                    console.error('Status update error:', error);
                    this.serverStatus = 'offline';
                    this.serverStats = { players: 0, ram: 0, uptime: 0, tps: 0 };
                    return 'offline';
                }
            }

            async getServerStats() {
                return this.serverStats;
            }

            updateUI() {
                // این تابع توسط AppManager فراخوانی می‌شود
            }
        }

        // ==================== مدیریت برنامه ====================
        class AppManager {
            constructor() {
                this.aternosAPI = new AternosAPIManager();
                this.isAdmin = false;
                this.currentUser = '';
                this.serverStatus = 'offline';
                this.isProcessing = false;
                this.monitoringInterval = null;
                this.statsInterval = null;
            }

            async checkLogin(username, password) {
                try {
                    if (username === CONFIG.ADMIN_USERNAME && password === CONFIG.ADMIN_PASSWORD) {
                        this.isAdmin = true;
                        this.currentUser = username;
                        const authSuccess = await this.aternosAPI.authenticate(username, password);
                        
                        if (authSuccess) {
                            this.saveSession();
                            this.addLog('احراز هویت با موفقیت انجام شد (ادمین)', 'success');
                            return true;
                        } else {
                            this.addLog('خطا در احراز هویت با Aternos', 'error');
                            return false;
                        }
                    } else {
                        this.isAdmin = false;
                        this.currentUser = username;
                        this.saveSession();
                        this.addLog('ورود موفقیت‌آمیز (کاربر عادی)', 'success');
                        return true;
                    }
                } catch (error) {
                    console.error('Login error:', error);
                    this.addLog('خطا در ورود به سیستم: ' + error.message, 'error');
                    return false;
                }
            }

            saveSession() {
                const sessionData = {
                    user: this.currentUser,
                    isAdmin: this.isAdmin,
                    timestamp: Date.now()
                };
                localStorage.setItem('mc_server_session', JSON.stringify(sessionData));
            }

            restoreSession() {
                try {
                    const sessionData = localStorage.getItem('mc_server_session');
                    if (sessionData) {
                        const data = JSON.parse(sessionData);
                        if (Date.now() - data.timestamp < CONFIG.SESSION_TIMEOUT) {
                            this.currentUser = data.user;
                            this.isAdmin = data.isAdmin;
                            return true;
                        } else {
                            localStorage.removeItem('mc_server_session');
                        }
                    }
                } catch (error) {
                    console.error('Session restore error:', error);
                }
                return false;
            }

            checkSessionExpiry() {
                try {
                    const sessionData = localStorage.getItem('mc_server_session');
                    if (sessionData) {
                        const data = JSON.parse(sessionData);
                        if (Date.now() - data.timestamp > CONFIG.SESSION_TIMEOUT) {
                            localStorage.removeItem('mc_server_session');
                            this.logout();
                            return false;
                        }
                        return true;
                    }
                } catch (error) {
                    console.error('Session check error:', error);
                }
                return false;
            }

            async controlServer(action) {
                if (!this.isAdmin) {
                    this.addLog('شما دسترسی ادمین ندارید!', 'error');
                    return false;
                }

                if (this.isProcessing) {
                    this.addLog('در حال پردازش درخواست قبلی...', 'warning');
                    return false;
                }

                this.isProcessing = true;
                this.updateButtonStates();

                const actionText = {
                    'start': 'روشن کردن',
                    'stop': 'خاموش کردن', 
                    'restart': 'راه‌اندازی مجدد',
                    'cancel': 'لغو',
                    'confirm': 'تأیید'
                }[action];

                this.addLog(`درخواست ${actionText} سرور ارسال شد...`);

                try {
                    const success = await this.aternosAPI.controlServer(action);
                    if (success) {
                        this.addLog(`سرور ${actionText} شد`, 'success');
                        this.serverStatus = this.aternosAPI.serverStatus;
                        this.updateUI();
                        return true;
                    } else {
                        this.addLog(`خطا در ${actionText} سرور`, 'error');
                        return false;
                    }
                } catch (error) {
                    console.error('Control error:', error);
                    this.addLog(`خطا در ${actionText} سرور: ${error.message}`, 'error');
                    return false;
                } finally {
                    this.isProcessing = false;
                    this.updateButtonStates();
                }
            }

            async updateServerStatus() {
                try {
                    const status = await this.aternosAPI.updateServerStatus();
                    this.serverStatus = status;
                    this.updateUI();
                    if (status === 'online') {
                        await this.updateServerStats();
                    } else {
                        this.resetStats();
                    }
                } catch (error) {
                    console.error('Status update error:', error);
                    this.addLog('خطا در دریافت وضعیت سرور', 'error');
                }
            }

            async updateServerStats() {
                try {
                    const stats = await this.aternosAPI.getServerStats();
                    document.getElementById('playerCount').textContent = stats.players;
                    document.getElementById('ramUsage').textContent = stats.ram + 'MB';
                    document.getElementById('uptime').textContent = this.formatUptime(stats.uptime);
                    document.getElementById('tps').textContent = stats.tps.toFixed(1);
                } catch (error) {
                    console.error('Stats update error:', error);
                    this.resetStats();
                }
            }

            formatUptime(seconds) {
                if (!seconds) return '0h';
                const hours = Math.floor(seconds / 3600);
                const minutes = Math.floor((seconds % 3600) / 60);
                return `${hours}h ${minutes}m`;
            }

            resetStats() {
                document.getElementById('playerCount').textContent = '0';
                document.getElementById('ramUsage').textContent = '0MB';
                document.getElementById('uptime').textContent = '0h';
                document.getElementById('tps').textContent = '0';
            }

            updateUI() {
                const indicator = document.getElementById('statusIndicator');
                const statusText = document.getElementById('statusText');
                
                indicator.className = 'status-indicator';
                
                switch(this.serverStatus) {
                    case 'online':
                        indicator.classList.add('status-online');
                        statusText.textContent = 'آنلاین 🟢 - سرور فعال است';
                        statusText.style.color = '#4cd137';
                        break;
                    case 'offline':
                        indicator.classList.add('status-offline');
                        statusText.textContent = 'آفلاین 🔴 - سرور غیرفعال است';
                        statusText.style.color = '#e84118';
                        break;
                    case 'starting':
                        indicator.classList.add('status-starting');
                        statusText.textContent = 'در حال راه‌اندازی... ⚡';
                        statusText.style.color = '#fbc531';
                        break;
                    default:
                        indicator.classList.add('status-offline');
                        statusText.textContent = 'وضعیت نامعلوم';
                        statusText.style.color = '#dcdde1';
                }
                
                this.updateButtonStates();
                this.updateLastUpdateTime();
            }

            updateButtonStates() {
                const startBtn = document.getElementById('startBtn');
                const stopBtn = document.getElementById('stopBtn');
                const restartBtn = document.getElementById('restartBtn');
                const cancelBtn = document.getElementById('cancelBtn');
                const confirmBtn = document.getElementById('confirmBtn');

                if (startBtn && stopBtn && restartBtn && cancelBtn && confirmBtn) {
                    startBtn.disabled = this.isProcessing || this.serverStatus !== 'offline';
                    stopBtn.disabled = this.isProcessing || this.serverStatus !== 'online';
                    restartBtn.disabled = this.isProcessing || this.serverStatus !== 'online';
                    cancelBtn.disabled = this.isProcessing || this.serverStatus !== 'starting';
                    confirmBtn.disabled = this.isProcessing;

                    const buttons = [startBtn, stopBtn, restartBtn, cancelBtn, confirmBtn];
                    buttons.forEach(btn => {
                        if (this.isProcessing) {
                            btn.classList.add('loading');
                        } else {
                            btn.classList.remove('loading');
                        }
                    });
                }
            }

            updateLastUpdateTime() {
                const now = new Date();
                document.getElementById('lastUpdate').textContent = now.toLocaleTimeString('fa-IR');
                document.getElementById('currentTime').textContent = now.toLocaleTimeString('fa-IR');
            }

            addLog(message, type = 'info') {
                const logsContainer = document.getElementById('serverLogs');
                if (!logsContainer) return;
                
                const logEntry = document.createElement('div');
                logEntry.className = `log-entry`;
                
                const now = new Date();
                const timestamp = now.toLocaleTimeString('fa-IR');
                const typeIcon = {
                    'error': '❌',
                    'success': '✅', 
                    'warning': '⚠️',
                    'info': 'ℹ️'
                }[type] || 'ℹ️';
                
                logEntry.innerHTML = `
                    <span class="log-time">${timestamp}</span>
                    <span style="color: ${type === 'error' ? '#ff6b6b' : type === 'success' ? '#7bed9f' : type === 'warning' ? '#ffeaa7' : 'white'}">
                        ${typeIcon} ${message}
                    </span>
                `;
                
                logsContainer.appendChild(logEntry);
                logsContainer.scrollTop = logsContainer.scrollHeight;
                this.updateLastUpdateTime();
            }

            handleNetworkError(error) {
                console.error('Network error:', error);
                this.addLog('خطا در اتصال به سرور: ' + error.message, 'error');
                this.serverStatus = 'offline';
                this.updateUI();
                setTimeout(() => {
                    this.updateServerStatus();
                }, 30000);
            }

            startMonitoring() {
                this.updateServerStatus();
                if (this.monitoringInterval) {
                    clearInterval(this.monitoringInterval);
                }
                this.monitoringInterval = setInterval(async () => {
                    await this.updateServerStatus();
                    this.checkSessionExpiry();
                }, 30000);
                this.statsInterval = setInterval(() => {
                    if (this.serverStatus === 'online') {
                        this.updateServerStats();
                    }
                }, 10000);
            }

            stopMonitoring() {
                if (this.monitoringInterval) {
                    clearInterval(this.monitoringInterval);
                    this.monitoringInterval = null;
                }
                if (this.statsInterval) {
                    clearInterval(this.statsInterval);
                    this.statsInterval = null;
                }
            }

            logout() {
                this.stopMonitoring();
                this.isAdmin = false;
                this.currentUser = '';
                this.aternosAPI.isAuthenticated = false;
                localStorage.removeItem('mc_server_session');
                location.reload();
            }
        }

        const appManager = new AppManager();

        async function checkLogin() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const message = document.getElementById('loginMessage');

            if (!username || !password) {
                message.textContent = 'لطفاً نام کاربری و رمز عبور را وارد کنید';
                message.classList.remove('hidden');
                return;
            }

            const loginLoadingOverlay = document.getElementById('loginLoadingOverlay');
            const loginTimer = document.getElementById('loginTimer');
            loginLoadingOverlay.classList.remove('hidden');
            
            let secondsLeft = 15;
            const timerInterval = setInterval(() => {
                secondsLeft--;
                loginTimer.textContent = secondsLeft + ' ثانیه باقی مانده';
                if (secondsLeft <= 0) {
                    clearInterval(timerInterval);
                    loginLoadingOverlay.classList.add('hidden');
                }
            }, 1000);

            const loginBtn = document.querySelector('#loginForm .btn');
            loginBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> در حال ورود...';
            loginBtn.disabled = true;

            const success = await appManager.checkLogin(username, password);
            
            setTimeout(() => {
                loginLoadingOverlay.classList.add('hidden');
                clearInterval(timerInterval);
                
                if (success) {
                    document.getElementById('loginForm').classList.add('hidden');
                    document.getElementById('serverPanel').classList.remove('hidden');
                    document.getElementById('userInfo').classList.remove('hidden');
                    document.getElementById('userDisplayName').textContent = username;
                    
                    if (appManager.isAdmin) {
                        document.getElementById('adminBadge').classList.remove('hidden');
                        document.getElementById('adminControls').classList.remove('hidden');
                        document.getElementById('aternosPanel').classList.remove('hidden');
                        document.getElementById('userMessage').classList.add('hidden');
                        setTimeout(() => {
                            loadAternosPanel();
                        }, 2000);
                    } else {
                        document.getElementById('adminBadge').classList.add('hidden');
                        document.getElementById('adminControls').classList.add('hidden');
                        document.getElementById('aternosPanel').classList.add('hidden');
                        document.getElementById('userMessage').classList.remove('hidden');
                    }
                    
                    appManager.startMonitoring();
                } else {
                    message.textContent = 'نام کاربری یا رمز عبور اشتباه است';
                    message.classList.remove('hidden');
                    loginBtn.innerHTML = '<i class="fas fa-sign-in-alt"></i> ورود به سیستم';
                    loginBtn.disabled = false;
                }
            }, 15000);
        }

        async function controlServer(action) {
            await appManager.controlServer(action);
        }

        function logout() {
            appManager.logout();
        }

        function copyAddress() {
            const address = CONFIG.SERVER_ADDRESS;
            const tempInput = document.createElement('input');
            tempInput.value = address;
            document.body.appendChild(tempInput);
            tempInput.select();
            
            try {
                const successful = document.execCommand('copy');
                document.body.removeChild(tempInput);
                
                if (successful) {
                    showMessage('آدرس سرور کپی شد! 🎮', 'success');
                } else {
                    showMessage('خطا در کپی آدرس', 'error');
                }
            } catch (err) {
                document.body.removeChild(tempInput);
                navigator.clipboard.writeText(address)
                    .then(() => showMessage('آدرس سرور کپی شد! 🎮', 'success'))
                    .catch(() => showMessage('خطا در کپی آدرس', 'error'));
            }
        }

        function showConnectionHelp() {
            showMessage('برای اتصال: Minecraft → Multiplayer → Direct Connect → آدرس سرور را وارد کنید', 'info');
        }

        function loadAternosPanel() {
            const iframeContainer = document.getElementById('aternosIframeContainer');
            const iframe = document.getElementById('aternosIframe');
            const loadingOverlay = document.getElementById('loadingOverlay');
            
            loadingOverlay.classList.remove('hidden');
            
            setTimeout(() => {
                iframe.src = CONFIG.ATERNOS_PANEL_URL;
                iframeContainer.style.display = 'block';
                
                setTimeout(() => {
                    loadingOverlay.classList.add('hidden');
                    appManager.addLog('پنل Aternos با موفقیت بارگذاری شد', 'success');
                }, 3000);
                
                iframe.onload = function() {
                    loadingOverlay.classList.add('hidden');
                    appManager.addLog('پنل Aternos با موفقیت بارگذاری شد', 'success');
                };
                
                iframe.onerror = function() {
                    loadingOverlay.classList.add('hidden');
                    appManager.addLog('خطا در بارگذاری پنل Aternos', 'error');
                    showMessage('خطا در بارگذاری پنل Aternos. لطفاً از دکمه "باز کردن در تب جدید" استفاده کنید.', 'error');
                };
            }, 1000);
        }

        function openAternosInNewTab() {
            window.open(CONFIG.ATERNOS_PANEL_URL, '_blank');
            appManager.addLog('پنل Aternos در تب جدید باز شد', 'info');
        }

        function showMessage(text, type = 'info') {
            const existingMessages = document.querySelectorAll('.custom-message');
            existingMessages.forEach(msg => {
                if (msg.parentNode) {
                    msg.parentNode.removeChild(msg);
                }
            });
            
            const message = document.createElement('div');
            message.className = `message ${type} custom-message`;
            message.textContent = text;
            message.style.position = 'fixed';
            message.style.top = '20px';
            message.style.left = '50%';
            message.style.transform = 'translateX(-50%)';
            message.style.zIndex = '10000';
            message.style.minWidth = '300px';
            message.style.textAlign = 'center';
            message.style.boxShadow = '0 10px 30px rgba(0,0,0,0.3)';
            message.style.borderRadius = '10px';
            message.style.padding = '15px 20px';
            message.style.fontWeight = '600';
            
            document.body.appendChild(message);
            
            setTimeout(() => {
                message.style.opacity = '0';
                message.style.transition = 'opacity 0.5s ease';
                setTimeout(() => {
                    if (message.parentNode) {
                        message.parentNode.removeChild(message);
                    }
                }, 500);
            }, 4000);
        }

        document.addEventListener('DOMContentLoaded', function() {
            const togglePassword = document.getElementById('togglePassword');
            const passwordInput = document.getElementById('password');
            
            togglePassword.addEventListener('click', function() {
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);
                this.innerHTML = type === 'password' ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
            });

            const hasSession = appManager.restoreSession();
            
            if (hasSession) {
                document.getElementById('loginForm').classList.add('hidden');
                document.getElementById('serverPanel').classList.remove('hidden');
                document.getElementById('userInfo').classList.remove('hidden');
                
                document.getElementById('userDisplayName').textContent = appManager.currentUser;
                
                if (appManager.isAdmin) {
                    document.getElementById('adminBadge').classList.remove('hidden');
                    document.getElementById('adminControls').classList.remove('hidden');
                    document.getElementById('aternosPanel').classList.remove('hidden');
                    document.getElementById('userMessage').classList.add('hidden');
                    setTimeout(() => {
                        loadAternosPanel();
                    }, 1000);
                } else {
                    document.getElementById('adminBadge').classList.add('hidden');
                    document.getElementById('adminControls').classList.add('hidden');
                    document.getElementById('aternosPanel').classList.add('hidden');
                    document.getElementById('userMessage').classList.remove('hidden');
                }
                
                appManager.startMonitoring();
                appManager.addLog('سیستم با موفقیت راه‌اندازی شد', 'success');
            } else {
                appManager.addLog('برای شروع، وارد سیستم شوید', 'info');
            }

            setInterval(() => {
                document.getElementById('currentTime').textContent = 
                    new Date().toLocaleTimeString('fa-IR');
            }, 1000);

            document.getElementById('password').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    checkLogin();
                }
            });

            const addressCode = document.querySelector('.server-address code');
            if (addressCode) {
                addressCode.style.cursor = 'pointer';
                addressCode.title = 'کلیک برای کپی آدرس';
            }
        });
    </script>
</body>
</html>
